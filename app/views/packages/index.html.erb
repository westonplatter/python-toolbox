<h2>Packages</h2>

<br>

<%= search_form_for @q do |f| %>
  <div class="row">
    <div class="col-sm">
      <div class="form-group">
        <%= f.label :name_cont %>
        <%= f.search_field :name_cont, class: "form-control"%>
      </div>
    </div>

    <div class="col-sm">
      <div class="form-group">
        <label for="in_category_id">Category</label>
        <%= f.select :in_category_id,
              options_from_collection_for_select(Category.all, "id", "name", @q.in_category_id),
              {include_blank: true},
              {class: "form-control"}
              %>
      </div>
    </div>
  </div>
  <%= f.submit class: "btn btn-primary", style: "width: 70%; margin-left: 15%"%>
<% end %>

<br/>
<br/>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Total Downloads</th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= link_to "view", package_path(package), class: "btn btn-outline-primary btn-sm" %></td>
        <td><%= package.name %></td>
        <td><%= number_with_delimiter(package.total_downloads) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row">
  <div class="col-md-12">
    <%= will_paginate @packages,
      renderer: WillPaginate::ActionView::BootstrapLinkRenderer,
      class: 'd-flex justify-content-center' %>
  </div>
</div>
