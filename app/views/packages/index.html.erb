<h3>Packages</h3>

<%= will_paginate @packages, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Total Downloads</th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= link_to "view", package_path(package), class: "btn btn-sm btn-default" %></td>
        <td><%= package.name %></td>
        <td><%= number_with_delimiter(package.total_downloads) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @packages, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
