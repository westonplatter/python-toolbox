<!DOCTYPE html>
<html>
  <head>
    <title>PythonToolbox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application'  %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid maxwidth-1200">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="<%= root_path %>">Python Toolbox</a>
        </div>

        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <!-- <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li> -->
            <!-- <li><a href="#">Link</a></li> -->
            <!-- <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">Action</a></li>
                <li><a href="#">Another action</a></li>
                <li><a href="#">Something else here</a></li>
                <li class="divider"></li>
                <li><a href="#">Separated link</a></li>
                <li class="divider"></li>
                <li><a href="#">One more separated link</a></li>
              </ul>
            </li> -->
          </ul>

          <% if !current_page?(root_url) %>
            <%= search_form_for(@q, url: "/search", method: :get) do |f| %>
              <%= f.search_field :name_cont, class: "form-control", placeholder: "Search", style: "width: 400px; display: inline-block; color: black;" %>
              <%= f.submit "Search", class: "btn btn-default", style: "margin-bottom: 4px;" %>
            <% end %>
          <% end %>

          <!-- <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Link</a></li>
          </ul> -->
        </div>
      </div>
    </nav>

    <div class="container-fluid maxwidth-1200">
      <div class="row">
        <div class="col-md-12">
          <div class="alert alert-info" role="alert">
            <p class="text-center"><b>Check out the public road map</b> =>
              <a href="https://trello.com/b/fdLlNnZK/python-toolbox-roadmap" target: "_blank">https://trello.com/b/fdLlNnZK/python-toolbox-roadmap</a>
            </p>
          </div>
        </div>

      </div>

    </div>

    <div class="container">
      <%= yield %>
    </div>

    <!-- footer goes here -->


