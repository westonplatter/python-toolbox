<br>

<div class='row'>
    <div class='col-md-4 col-md-offset-4 col-xs-6 col-xs-offset-3'>

        <%= form_tag("/search", class: "form", id: "packages-search", method: :get) do %>
          <div class='form-group'>
              <input class="form-control" name="q_name" type="text" placeholder="package name or topic">
          </div>

          <%= submit_tag "Search",  class: "btn btn-default", style: "width: 50%; margin-left: 25%;" %>
        <% end %>
    </div>
</div>
